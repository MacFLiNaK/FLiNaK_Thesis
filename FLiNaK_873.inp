@SET SYSTEM FLiNaK_873
&GLOBAL
  PROJECT FLiNaK
  RUN_TYPE MD   
  WALLTIME 1000000
  IOLEVEL  LOW          
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS            

    CHARGE 0
    MULTIPLICITY 1

    &MGRID
       CUTOFF [Ry] 450
    &END

    &QS
       METHOD GPW 
       EPS_DEFAULT 1.0E-10 
       EXTRAPOLATION ASPC 
    &END

    &POISSON
       PERIODIC XYZ 
    &END

    &SCF
      &PRINT
        &RESTART OFF
        &END
      &END
                      
      SCF_GUESS ATOMIC 
      MAX_SCF 30
      EPS_SCF 1.0E-6 
    
      &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER CG
      &END OT

      &OUTER_SCF 
        MAX_SCF 10
        EPS_SCF 1.0E-6 
      &END
    &END SCF

    &XC
      &XC_FUNCTIONAL 
         &PBE
         &END
      &END XC_FUNCTIONAL

      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL 
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 16
         &END
      &END VDW_POTENTIAL
    &END XC
  &END DFT
 
  &SUBSYS
    &CELL 
      ABC [angstrom] 12.0 12.0 12.0
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME FLiNaK.xyz
      COORD_FILE_FORMAT XYZ
    &END

    &KIND F                              
      BASIS_SET DZVP-MOLOPT-SR-GTH-q7         
      POTENTIAL GTH-PBE-q7             
    &END KIND
    &KIND K
      BASIS_SET DZVP-MOLOPT-SR-GTH-q9
      POTENTIAL GTH-PBE-q9
    &END KIND
    &KIND Li
      BASIS_SET DZVP-MOLOPT-SR-GTH-q3
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND Na
      BASIS_SET DZVP-MOLOPT-SR-GTH-q9
      POTENTIAL GTH-PBE-q9
    &END KIND
  &END SUBSYS

  &PRINT
    &FORCES
     FILENAME =FLiNaK_873.force
    &END
  &END
&END FORCE_EVAL

&MOTION
 &GEO_OPT
   OPTIMIZER BFGS 
   MAX_ITER  1000
   MAX_DR    [bohr] 0.003 
   &BFGS
   &END
 &END
  &MD
    ENSEMBLE NPT_I
    STEPS 20000
    TIMESTEP 0.5
    TEMPERATURE 873
    &BAROSTAT
      PRESSURE 1.01325
      TIMECON 1000
    &END BAROSTAT
    &THERMOSTAT
     REGION MASSIVE
     TYPE CSVR
     &CSVR
      TIMECON 50
     &END CSVR
    &END THERMOSTAT
  &END MD
&END MOTION